{
  "name": "mehdux",
  "description": "A straight forward state container",
  "author": "Ragnar Rognstad (http://rognstad.me)",
  "repository": "rognstadragnar/mehdux",
  "license": "MIT",
  "version": "0.2.0",
  "source": "src/main.js",
  "main": "dist/mehdux.js",
  "module": "dist/mehdux.esm.js",
  "browser": "dist/mehdux.umd.js",
  "devDependencies": {
    "microbundle": "^0.4.3",
    "preact": "^8.2.7",
    "react": "^16.2.0"
  },
  "peerDependencies": {
    "preact": "*",
    "react": "*"
  },
  "scripts": {
    "release":
      "npm t && git commit -am $npm_package_version && git tag $npm_package_version && git push && git push --tags && npm publish",
    "bundle:main": "microbundle",
    "bundle:preact": "microbundle src/preact.js -o dist/preact.js",
    "bundle:react": "microbundle src/react.js -o dist/react.js",
    "bundle":
      "npm run bundle:main && npm run bundle:preact && npm run bundle:react",
    "build": "npm run bundle",
    "test": "echo 'should add some tests.. :)'"
  },
  "files": ["dist"]
}
